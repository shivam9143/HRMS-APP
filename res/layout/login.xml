<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent" 
android:fillViewport="true"
android:background="@drawable/loginbackfinal">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
        >
    
    <LinearLayout android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dip">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="130dip"
            android:src="@drawable/logolgn" />

    </LinearLayout>

   

    <!-- Login Form -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="vertical"

        android:padding="10dip"
        android:paddingLeft="50dip">
        
        <TextView 
            android:id="@+id/ins"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dip"
            android:textColor="#FFFFFF"
            android:text="Organisation"
            android:textSize="20dip"/>




        <EditText
            android:id="@+id/institute"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:paddingRight="20dp"
            android:inputType="text"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/edit_text_style"
            android:textCursorDrawable="@drawable/mycursor"
            android:singleLine="true"
            android:drawableRight="@drawable/ins"/>
        
        <TextView
            android:id="@+id/sesn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dip"
            android:textColor="#FFFFFF"
            android:text="Session"
            android:textSize="20dip"/>
        
        <Spinner
        android:id="@+id/spinssn"
         android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp"
            android:hint="Enter Employee Code"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/edit_text_style"
            android:textCursorDrawable="@drawable/mycursor"
            android:singleLine="true"
            android:entries="@array/ssnlist"
            android:drawableRight="@drawable/ssn"/>
        
        

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dip"
            android:textColor="#FFFFFF"
            android:text="Employee Code"
            android:textSize="20dip"/>




        <EditText
            android:id="@+id/edit_USername"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dp"
            android:inputType="text"
            android:hint="Enter Employee Code"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/edit_text_style"
            android:textCursorDrawable="@drawable/mycursor"
            android:singleLine="true"
            android:drawableRight="@drawable/emp"/>


        <!--  Password Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dip"
            android:textColor="#FFFFFF"
            android:text="PASSWORD"
            android:textSize="20dip"/>


        <EditText
            android:id="@+id/edit_Pwd"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:hint="Enter Password"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/edit_text_style"
            android:textCursorDrawable="@drawable/mycursor"
            android:singleLine="true"
            android:password="true"
            android:drawableRight="@drawable/pass"/>


        <!-- Login button -->

        <Button android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:text="Login"
            android:textSize="25dip"
            android:layout_marginBottom="10dip"
            />
          <!-- Link to Registration Screen -->
        <TextView android:id="@+id/link_to_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Passsword? Click Here!"
            android:gravity="center"
            android:textSize="20dip"
            android:layout_marginBottom="5dip"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Powered By-Mkt Softwares"
            android:textColor="#FFFFFF"
            android:textSize="20dip"/>

       

    </LinearLayout>
    <!-- Login Form Ends -->
</LinearLayout>
</ScrollView>